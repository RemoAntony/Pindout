<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".categoryAll">
    <android.support.v7.widget.Toolbar
        android:id="@+id/catalltool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:title="All Categories"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#8c489f"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.app.pindout.MoreDealsSub1">

        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <Button
                android:background="#da70d6"
                android:id="@+id/onlineonline"
                android:onClick="onlineonline"
                android:text="Web Based Deals"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <View
                android:background="#c3c3e5"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <Button
                android:background="#da70d6"
                android:id="@+id/instoreinstore"
                android:onClick="instoreinstore"
                android:layout_gravity="center"
                android:text="Instore Deals"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="80dp" />
            <View
                android:background="#c3c3e5"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
