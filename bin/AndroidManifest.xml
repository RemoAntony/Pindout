        <activity
            android:name="com.app.pindout.RegisterActivity_Facility"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.app.pindout.progressbar.ShowProgressDialog"
            android:screenOrientation="portrait" >
