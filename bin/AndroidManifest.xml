        </activity>
        <activity
            android:name="com.app.pindout.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.app.pindout.businessdeals.AddDealActivity"
            android:label="@string/label_add_deal"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
