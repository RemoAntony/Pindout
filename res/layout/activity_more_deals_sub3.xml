<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <android.support.v7.widget.Toolbar
        android:id="@+id/dealstoolsub"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:title="Deals"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        />
    <LinearLayout
        android:id="@+id/fetchpagination"
        android:layout_gravity="center"
        android:gravity="center"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
<Button
    android:onClick="m3rewind"
    android:background="@drawable/rewind"
    android:layout_width="50dp"

    android:layout_height="wrap_content" />
<Button
    android:layout_marginRight="10dp"
    android:onClick="m3pre"
    android:background="@drawable/backgreen"
    android:layout_width="50dp"
    android:layout_height="wrap_content" />
    <TextView
        android:onClick="tv11n"
        android:text=""
        android:layout_margin="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:id="@+id/mdpgination1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:onClick="tv22n"
        android:layout_margin="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text=""
        android:id="@+id/mdpgination2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:onClick="tv33n"
        android:layout_margin="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:text=""
        android:id="@+id/mdpgination3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginLeft="10dp"
        android:onClick="m3more"
        android:background="@drawable/playgreen"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="m3ff"
        android:background="@drawable/fastforward"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />
</LinearLayout>
    <ScrollView
    android:id="@+id/testscroll"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#cccccc"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/scrollrelcheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/finalmoredeals"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">


    </LinearLayout>
        <Button
            android:id="@+id/predeals"
            android:onClick="setPredeals"
            android:textColor="#ffffff"
            android:text="Previous Deals"
            android:background="@drawable/btn_red"
            android:layout_below="@id/finalmoredeals"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <Button
            android:id="@+id/loadmoredeals"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:text="Load More Deals"
            android:background="@drawable/btn_green"
            android:layout_width="0dp"
            android:onClick="setMoreDeals"
            android:layout_below="@id/finalmoredeals"
            android:layout_height="0dp" />

    </RelativeLayout>
</ScrollView>
    </LinearLayout>