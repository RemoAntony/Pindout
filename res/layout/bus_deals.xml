<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/bus_deals"
    android:background="@drawable/customborder" >
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/correcturl"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <View
        android:layout_alignParentTop="true"
        android:background="#c3c3e5"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <ImageView
        android:id="@+id/deal_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="22dp"
        android:contentDescription="@null"
        />

    <RelativeLayout
        android:id="@+id/top_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/deal_img"
        android:layout_toRightOf="@+id/deal_img"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/middlelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deal_name" >

            <TextView
                android:id="@+id/main_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Main Price: Rs."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/showmain_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="price"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deal_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_price"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="Deal Price: Rs."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/showdeal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/showmain_price"
                android:layout_marginLeft="92dp"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="price"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deal_expiry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deal_price"
                android:layout_marginTop="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/home_heading"
                android:layout_marginBottom="4dp"
                android:text="Expiry Date"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/dealdescript"
                android:layout_below="@id/deal_expiry"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginBottom="4dp"
                android:textColor="@color/home_text1"
                android:ellipsize="end"/>

            <TextView
                android:textColor="@color/light_neongreen"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/showdeal_price"
                android:layout_below="@id/showmain_price"
                android:text="discount"
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/deal_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:paddingLeft="6dp"
            android:textColor="#222777"
            android:paddingRight="6dp"
            android:text="deal_name"
            android:textSize="20sp"
            android:textStyle="normal" />

    </RelativeLayout>
    <View
        android:layout_alignParentBottom="true"
        android:background="#c3c3e5"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</RelativeLayout>