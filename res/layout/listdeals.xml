<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/listdeals"
    android:background="@drawable/customborder" >
    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/correcturl"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <View
        android:layout_alignParentTop="true"
        android:background="#c3c3e5"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <ImageView
        android:id="@+id/deal_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="22dp"
        android:contentDescription="@null"
         />

    <RelativeLayout
        android:id="@+id/top_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/deal_img"
        android:layout_toRightOf="@+id/deal_img"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/middlelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deal_name" >

            <TextView

                android:id="@+id/main_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="MRP : Rs."
                android:textColor="@color/valentine_red"
                android:textSize="14sp" />
<TextView
    android:id="@+id/tesladealimagepopup"
    android:layout_width="0dp"
    android:layout_height="0dp" />
            <TextView
                android:id="@+id/showmain_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:layout_toRightOf="@id/main_price"
                android:layout_marginTop="6dp"
                android:text="price"
                android:textColor="@color/valentine_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deal_price"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/valentine_red"
                android:layout_toRightOf="@+id/showmain_price"
                android:layout_marginTop="4dp"
                android:text="Offer : Rs."
                android:textSize="14sp" />

            <TextView
                android:id="@+id/showdeal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/deal_price"
                android:layout_marginTop="4dp"
                android:text="price"
                android:textColor="@color/valentine_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/deal_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_price"
                android:layout_marginLeft="5dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:textColor="@color/home_heading"
                android:layout_marginBottom="4dp"
                android:text="Expiry Date"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/tesladealid"
                android:layout_width="0dp"
                android:layout_height="0dp" />
            <TextView

                android:id="@+id/dealdescript"
                android:layout_below="@id/deal_expiry"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:maxLines="1"
                android:layout_marginBottom="4dp"
                android:textColor="@color/home_text1"
                android:ellipsize="end"/>


        </RelativeLayout>
        <TextView
            android:id="@+id/deal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:paddingLeft="6dp"
            android:textColor="#222777"
            android:maxLength="12"
            android:ellipsize="end"
            android:paddingRight="6dp"
            android:text="deal_name"
            android:textSize="20sp"
            android:textStyle="normal" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/orange_dark"
            android:layout_toRightOf="@id/deal_name"
            android:text="discount"
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/tickicon"
            android:layout_toRightOf="@id/discount"
            android:id="@+id/interestedbutton"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:text="Valid till "
            android:id="@+id/actualexpire"
            android:layout_toRightOf="@id/deal_name"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/hiddenstatus"
        android:layout_width="0dp"
        android:layout_height="0dp" />
    <TextView
        android:id="@+id/hiddenimgurl"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <View
        android:layout_alignParentBottom="true"
        android:background="#c3c3e5"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</RelativeLayout>